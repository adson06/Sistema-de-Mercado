#include <stdio.h>
#include <string.h>

#define MAX_PRODUTOS 50
#define MAX_CARRINHO 50

typedef struct {
    int codigo;
    char nome[30];
    float preco;
    int quantidadep;
} Produto;

typedef struct {
    Produto produto;
    int quantidade;
} Carrinho;

Produto produtos[MAX_PRODUTOS];
Carrinho carrinho[MAX_CARRINHO];
int totalProdutos = 0;
int totalCarrinho = 0;

void menu();
void cadastrarProduto();
void listarProdutos();
void comprarProduto();
void visualizarCarrinho();
void fecharPedido();
int temNoCarrinho(int codigo);
Produto* pegarProdutoPorCodigo(int codigo);
void infoproduto();

int main() {
    menu();
    return 0;
}

void menu() {
    int opcao;
    do {
        printf("\n=== Sistema de Supermercado ===\n");
        printf("1. Cadastrar Produto\n");
        printf("2. Listar Produtos\n");
        printf("3. Comprar Produto\n");
        printf("4. Visualizar Carrinho\n");
        printf("5. Fechar Pedido\n");
        printf("6. Sair\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1: cadastrarProduto();
             break;
            case 2: listarProdutos();
             break;
            case 3: comprarProduto();
             break;
            case 4: visualizarCarrinho();
             break;
            case 5: fecharPedido();
             break;
            case 6: printf("Obrigado! Volte Sempre!\n"); 
            break;
            default: printf("Essa opcao nao existe.\n");
        }
    } while (opcao != 6);
}

void cadastrarProduto() {
    int quantProdutos;
    int cont = 1;
    printf("Quantos produtos voce deseja cadastrar?");
    scanf("%d", &quantProdutos);
    for(int i = 0; i < quantProdutos; i++){
    if (totalProdutos < MAX_PRODUTOS) {
        Produto p;
        printf("Produto %d:\n", cont++);
        printf("Codigo do produto: ");
        scanf("%d", &p.codigo);
        printf("Nome do produto: ");
        scanf(" %[^\n]s", p.nome);
        printf("Preco do produto: ");
        scanf("%f", &p.preco);
        produtos[totalProdutos++] = p;
        printf("\nProduto cadastrado!\n\n");
    } else {
        printf("Quantidade maxima de produtos atingido\n");
    }
    }
}

void infoproduto(){
    for (int i = 0; i < totalProdutos; i++) {
        printf("Codigo: %d | Nome: %s | Preco: R$ %.2f\n", produtos[i].codigo, produtos[i].nome, produtos[i].preco);  
}
}

void listarProdutos() {
    printf("\n=== Produtos Cadastrados ===\n");
    if(totalProdutos == 0){
        printf("Não existe produtos cadastrados ainda.\n");
    } else {
        infoproduto();
    }
        
}

void comprarProduto(){
	int codigo, quantidade;

	if (totalCarrinho >= MAX_CARRINHO) {
		printf("O limite de produtos dentro do carrinho foi atingido");
		return;
	}

	if (totalProdutos == 0) {
		printf("Nenhum produto cadastrado");
		return;
	}

	printf("Digite o codigo do produto que deseja colocar no carrinho de compras: ");
	scanf("%d", &codigo);

	Produto produtoSelecionado = *pegarProdutoPorCodigo(codigo);
	if (produtoSelecionado.codigo == -1) {
		printf("O produto com o codigo %d não foi encontrado, por favor digite um código de produto existente!\n", codigo);
		return;
	}
	printf("Digite a quantidade desejada: ");
	scanf("%d", &quantidade);
    

	int verificar = temNoCarrinho(codigo);

	if (verificar != -1) {
		carrinho[verificar].quantidade += quantidade;
		printf("A quantidade do produto '%s' foi atualizada!\n", carrinho[verificar].produto.nome);
	} else {
		carrinho[totalCarrinho].produto = *pegarProdutoPorCodigo(codigo);
		carrinho[totalCarrinho].quantidade = quantidade;
		totalCarrinho++;
		printf("O produto foi adicionado ao carrinho de compras!");
	}
}

void visualizarCarrinho() {
    printf("\n=== Carrinho ===\n");
    for (int i = 0; i < totalCarrinho; i++) {
        printf("Produto: %s | Preco: R$ %.2f | Quantidade: %d\n", carrinho[i].produto.nome, carrinho[i].produto.preco, carrinho[i].quantidade);
    }
}

void fecharPedido() {
    float total = 0;
    printf("\n=== Fechamento de Pedido ===\n");
    for (int i = 0; i < totalCarrinho; i++) {
        float subtotal = carrinho[i].produto.preco * carrinho[i].quantidade;
        printf("Produto: %s | Preco: R$ %.2f | Quantidade: %d | Subtotal: R$ %.2f\n",
            carrinho[i].produto.nome, carrinho[i].produto.preco, carrinho[i].quantidade, subtotal);
        total += subtotal;
    }
    printf("Valor total da compra: R$ %.2f\n", total);
    totalCarrinho = 0; 
    printf("Carrinho esvaziado!\n");
}

int temNoCarrinho(int codigo) {
    for (int i = 0; i < totalCarrinho; i++) {
        if (carrinho[i].produto.codigo == codigo) {
            return i;
        }
    }
    return -1; 
}

Produto* pegarProdutoPorCodigo(int codigo) {
    for (int i = 0; i < totalProdutos; i++) {
        if (produtos[i].codigo == codigo) {
            return &produtos[i];
        }
    }
    return NULL;
}
